{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400,
    "title": "Number of Restaurants by Industry type in Melbourne ",
    "data": {
        "url": "https://raw.githubusercontent.com/cepa005/FIT3179HW-W9/refs/heads/main/data/cafes-and-restaurants-with-seating-capacity.csv"
    },
    "params": [{
        "name": "Industry_selection",
        "bind": {
            "input": "select",
            "options": [
                null,
                "Cafes and Restaurants",
                "Takeaway Food Services",
                "Pubs, Taverns and Bars",
                "Others"
            ],
            "labels": [
                "Show All",
                "Cafes and Restaurants",
                "Takeaway Food Services",
                "Pubs, Taverns and Bars",
                "Others"
            ],
            "name": "Select Industry: "
        }
    }],
    "transform": [
        {"filter": "datum.industry_anzsic4_description != ''"},
        {
            "calculate": "datum.industry_anzsic4_description == 'Cafes and Restaurants' || datum.industry_anzsic4_description == 'Takeaway Food Services' || datum.industry_anzsic4_description == 'Pubs, Taverns and Bars' ? datum.industry_anzsic4_description : 'Others'",
            "as": "industry_group"
        },
        {"aggregate": [{"op": "count", "as": "industry_count"}], "groupby": ["industry_group"]}
    ],
    "layer": [
    {
        "mark": "bar",
        "encoding": {
        "x": {
            "field": "industry_group",
            "type": "nominal",
            "axis": {"labelAngle": -45},
            "title": "Industry Type"
        },
        "y": {
            "field": "industry_count",
            "type": "quantitative",
            "title": "Number of Businesses"
        },
        "color": {
            "field": "industry_group",
            "type": "nominal",
            "legend": {"title": "Industry Type"},
            "title": "Industry Color"
        },
        "opacity": {
            "condition": {
                "test": "datum.industry_group == Industry_selection || Industry_selection == null",
                "value": 1
            },
            "value": 0.2
        },
        "tooltip": [
            {"field": "industry_group", "type": "nominal", "title": "Industry Type"},
            {"field": "industry_count", "type": "quantitative", "title": "Number of Businesses"}
            ]
        }
    },
    {
        "mark": {
            "type": "text",
            "align": "center",
            "baseline": "bottom",
            "dx": -5,
            "fontSize": 12,
            "fontStyle": "bold"
        },
        "encoding": {
            "x": {
                "field": "industry_group",
                "type": "nominal"
            },
            "y": {
                "field": "industry_count",
                "type": "quantitative"
            },
            "text": {
                "field": "industry_count",
                "text": "quantitative"
            },
            "color": {"value": "black"}
        }
    }
    ]
    
}