{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Restaurants, bistros and cafes around Melbourne",
    "projection": {
        "type": "mercator",
        "center": [144.9631, -37.8136],
        "scale": 260000
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/cepa005/FIT3179HW-W9/refs/heads/main/vic_localities.json",
                "format": {"type": "topojson", "feature": "vic_localities"}
            },
            "transform": [
                {
                    "lookup": "properties.name",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/cepa005/FIT3179HW-W9/refs/heads/main/data/cafes-and-restaurants-with-seating-capacity.csv",
                            "format": {"type": "csv"}
                        },
                        "key": "clue_small_area",
                        "fields": ["clue_small_area"]
                    }
                },
                {
                    "aggregate": [
                        {"op": "count", "field": "trading_name", "as": "restaurant_count"}
                    ],
                    "groupby": ["clue_small_area"]
                }

            ],
            "mark": {"type": "geoshape", "stroke": "white"},
            "encoding": {
                "color": {
                    "field": "restaurant_count",
                    "type": "quantitative",
                    "title": "Number of Restaurant",
                    "scale": {
                        "domain": [0,10000],
                        "range": ["#e0f3f8", "#005824"]
                    }
                },
                "tooltip": [
                    {"field": "properties.name", "type": "nominal", "title": "Area"},
                    {"field": "restaurant_count", "type": "quantitative", "title": "Number of Restaurants"}
                ]
            }
        }  
    ],
    "config": {
        "geoshape": {
            "color": "lightgray",
            "stroke": "white"
        }
    }
}